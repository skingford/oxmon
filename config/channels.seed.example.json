{
  "channels": [
    {
      "name": "ops-email",
      "channel_type": "email",
      "description": "Email alerts for ops team",
      "min_severity": "warning",
      "enabled": true,
      "config": {
        "smtp_host": "smtp.example.com",
        "smtp_port": 587,
        "smtp_username": "alerts@example.com",
        "smtp_password": "your-password",
        "from": "alerts@example.com"
      },
      "recipients": [
        "oncall@example.com",
        "devops@example.com"
      ]
    },
    {
      "name": "critical-webhook",
      "channel_type": "webhook",
      "description": "Webhook for critical alerts",
      "min_severity": "critical",
      "enabled": true,
      "config": {
        "body_template": "{\"text\": \"[{{severity}}] {{agent_id}}: {{message}}\"}"
      },
      "recipients": [
        "https://hooks.example.com/alert"
      ]
    },
    {
      "name": "dingtalk-ops",
      "channel_type": "dingtalk",
      "description": "DingTalk robot for ops group",
      "min_severity": "warning",
      "enabled": true,
      "config": {
        "webhook_url": "https://oapi.dingtalk.com/robot/send?access_token=YOUR_TOKEN",
        "secret": "SEC_YOUR_SECRET"
      },
      "recipients": []
    },
    {
      "name": "aliyun-sms",
      "channel_type": "sms",
      "description": "Aliyun SMS for critical alerts",
      "min_severity": "critical",
      "enabled": true,
      "config": {
        "provider": "aliyun",
        "access_key_id": "LTAI5tYOUR_ACCESS_KEY_ID",
        "access_key_secret": "YOUR_ACCESS_KEY_SECRET",
        "sign_name": "your_sign_name",
        "template_code": "SMS_123456789"
      },
      "recipients": [
        "13800138000"
      ]
    },
    {
      "name": "tencent-sms",
      "channel_type": "sms",
      "description": "Tencent Cloud SMS for warning alerts",
      "min_severity": "warning",
      "enabled": true,
      "config": {
        "provider": "tencent",
        "secret_id": "YOUR_TENCENT_SECRET_ID",
        "secret_key": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
        "sdk_app_id": "1400123456",
        "sign_name": "your_sign_name",
        "template_id": "123456"
      },
      "recipients": [
        "13800138000"
      ]
    }
  ],
  "silence_windows": [
    {
      "start_time": "02:00",
      "end_time": "04:00",
      "recurrence": "daily"
    }
  ]
}
