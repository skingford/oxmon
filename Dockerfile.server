FROM rust:1.84 AS builder
WORKDIR /app
COPY . .
RUN cargo build --release --bin oxmon-server

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/oxmon-server /usr/local/bin/
COPY config/server.example.toml /etc/oxmon/server.toml
EXPOSE 9090 8080
ENTRYPOINT ["oxmon-server", "/etc/oxmon/server.toml"]
